@model SR.Uhcsr.IdentityProvider.Web.Models.VerifyViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Two Factor</h2>
<p>Enter the code sent to your Email</p>

@using (Html.BeginForm("Index", "verify", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (ViewData["message"] != null)
    {
        <div class="alert alert-danger">@ViewData["message"]</div>
    }

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(m => m.Code, new { @class = "control-label" }) <br />
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })<br />
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
            @*<label for="code">Code</label>
            <input type="text" id="code" name="code" class="form-control"> <br/>
            <input type="checkbox" id="rememberMe" name="rememberMe">
            <label for="rememberMe">Remember Me</label>*@
        </div>
    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
}
